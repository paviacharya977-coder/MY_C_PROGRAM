#include <stdio.h>
struct Student {
    char name[20];
    int age;
    float marks;
};
int main() {
    struct Student s[3];     
    struct Student *ptr;     
    ptr = s;  
    for(int i = 0; i < 3; i++) {
        printf("Enter name, age and marks of student %d:\n", i+1);
        scanf("%s %d %f", (ptr+i)->name, &(ptr+i)->age, &(ptr+i)->marks);
    }
    printf("\n--- Student Details ---\n");
    for(int i = 0; i < 3; i++) {
        printf("Name: %s\n",     (ptr+i)->name);
        printf("Age: %d\n",      (ptr+i)->age);
        printf("Marks: %.2f\n\n", (ptr+i)->marks);
    }
    return 0;
}


OUTPUT
Enter name, age and marks of student 1:
Pavi 17 100
Enter name, age and marks of student 2:
Sinchu 21 100
Enter name, age and marks of student 3:
Appu 18 100

--- Student Details ---
Name: Pavi
Age: 17
Marks: 100.00

Name: Sinchu
Age: 21
Marks: 100.00

Name: Appu
Age: 18
Marks: 100.00



