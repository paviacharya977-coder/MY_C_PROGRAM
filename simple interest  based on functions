#include<stdio.h>
int sicalculator(){
    int p,t,r,si;
    printf("enter the principal amount \n");
    scanf("%f",&p);
    printf("enter number of years \n");
    scanf("%f",&t);
    printf("enter rate of interest \n");
    scanf("%f",&r);
    si=(p*t*r)/100;
    printf("si=%.2f\n",si);
    return 0 ;
}
int main(){
    sicalculator();
}
