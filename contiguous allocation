#include <stdio.h>
#include <stdlib.h>
int main() {
    int n, i;
    int *ptr;
    printf("Enter number of elements: ");
    scanf("%d", &n);
    ptr = (int *)calloc(n, sizeof(int));
    if (ptr == NULL) {
        printf("Memory not allocated!\n");
        return 1;
    }
    printf("Enter %d numbers:\n", n);
    for (i = 0; i < n; i++) {
        scanf("%d", &ptr[i]);
    }
    printf("\nYou entered:\n");
    for (i = 0; i < n; i++) {
        printf("%d ", ptr[i]);
    }
    free(ptr);
    return 0;
}


OUTPUT
Enter number of elements: 5
Enter 5 numbers:
2
4
3
1
6

You entered:
2 4 3 1 6 
